<main>

<div class="container">
 <div class="row">
  <div class="col-md-3">
<%= render 'users/list', user: @user, book: Book.new %>
  </div>
<div class="col-md-8 offset-md-1">

<h2>Book detail</h2>
<table class="table">
 <tbody>
  <tr>
   <td><%= link_to image_tag(@user.get_profile_image(100,100)), user_path(@user.id) %><br>
       <%= link_to @user.name, user_path(@user.id) %></td>
   <td><%= link_to @book.title, book_path %></td>
   <td><%= @book.body %></td>
<% if @book.user == current_user %>
 <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
 <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
<% end %>
  </tr>
 </tbody>
</table>
</div>
 </div>
</div>
</main>