<h3>User info</h3>
<div>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name:<%= current_user.name %></p>
  <p>introduction:<%= current_user.introduction %></p>
</div>

<% @users.each do |user| %>
<h4>Users</h4>
<div>
  <p>image <%= image_tag current_user.get_profile_image(100,100) %></p>
  <p>name <%= user.name %></p>
  <p><%= link_to "Show", user_path(user.id) %></p>
</div>
<% end %>

<h3>New book</h3>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>